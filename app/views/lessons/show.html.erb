<% provide(:title, @lesson.title) %>
<%= form_for(@lesson) do |l| %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= l.title %>
        </h1>
          <% @lesson.questions.each do |f| %>
            Question <%= f.id %>: <%= f.content %>
            <% f.answers.each do |a|%>
              <%= l.radio_button :check, class: "form-control" %><%= a.content%>
            <% end %>
          <% end %>
        <%= l.submit t(".submit"), class: "btn btn-primary" %>
      </section>
    </aside>
</div>
<% end %>
