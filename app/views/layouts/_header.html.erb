<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts._header.name_1"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts._header.name_2"),  root_path %></li>
        <li><%= link_to t("layouts._header.name_3"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("layouts._header.name_5"), users_path  %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t("layouts._header.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts._header.name_6"), current_user %></li>
              <li><%= link_to t("layouts._header.name_7"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("layouts._header.name_8"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
         <li><%= link_to t("layouts._header.name_4"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
